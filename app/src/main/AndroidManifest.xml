<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.merofirstapp">

<!--    here we define the pages of the mobile app -->
<!--    also we define the permission required for the application -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MeroFirstApp">
<!--        here are the activity are define which are created by use -->
        <activity android:name=".LoginActivity">

<!--            intent filter tell activity type -->
            <intent-filter>
<!--                this will tell that it is main activity-->
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>